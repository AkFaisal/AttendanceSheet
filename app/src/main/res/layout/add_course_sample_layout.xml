<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/add_edtCT_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addHints_ct"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />
    <EditText
        android:id="@+id/add_edtCC_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/addHints_cc"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/add_edtCT_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_edtCT_ID"
        app:layout_constraintTop_toBottomOf="@+id/add_edtCT_ID" />

    <Button
        android:id="@+id/addButton_ID"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:text="@string/addButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_edtCC_ID"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/add_edtCC_ID"
        app:layout_constraintTop_toBottomOf="@+id/add_edtCC_ID"
        app:layout_constraintVertical_bias="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>